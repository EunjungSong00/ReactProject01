{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      //path 설정
      "@module/*": ["src/module/*"],
      "@hook/*": ["src/module/hook/*"],
      "@component/*": ["src/component/*"],
      "@interface/*": ["src/interface/*"],
      "@layout/*": ["src/component/layout/*"],
      "@container/*": ["src/container/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@typings/*": ["typings/*"],
      "@styles/*": ["styles/*"],
      "@public/*": ["public/*"],
      "@api/*": ["src/api/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
